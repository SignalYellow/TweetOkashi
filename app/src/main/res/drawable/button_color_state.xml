<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 押下状態 / pressed -->
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_5"/>
            <corners android:radius="4dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/purple_5"/>
            <padding
                android:left="8dp"
                android:right="8dp"/>

        </shape>

    </item>
    <!-- 無効状態 / disabled -->
    <item
        android:state_enabled="false"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_1"/>
            <corners android:radius="4dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/purple_5"/>
            <padding
                android:left="8dp"
                android:right="8dp"/>
        </shape>

    </item>
    <!-- 通常状態 / normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/purple_2"
                android:endColor="@color/purple_3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/purple_5"/>
            <padding
                android:left="8dp"
                android:right="8dp"/>
        </shape>
    </item>

</selector>
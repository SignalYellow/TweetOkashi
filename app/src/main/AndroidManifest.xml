<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.signalyellow.tweetokashi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.TweetOkashiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_ja"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.TwitterOAuthActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="TwitterOAuthActivity"
                    android:scheme="callback" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HomeTimelineActivity"
            android:alwaysRetainTaskState="true"
            android:label="@string/app_name_en"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.SearchActivity"
            android:label="@string/app_name_en"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TweetActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TimelineActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SettingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HaikuRegenerateActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.RetweetActivity" />
        <activity
            android:name=".activity.ReplyActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.HaikuRetweetActivity" />
        <activity
            android:name=".activity.CreditActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HelpActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FavoriteActivity"
            android:label="@string/title_activity_favorite" />
        <activity
            android:name=".sub.TweetPostActivity"
            android:label="@string/title_activity_tweet_post"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".sub.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".sub.RetweetListActivity"
            android:label="@string/title_activity_retweet_list" />
        <activity
            android:name=".activity.FavoriteListActivity"
            android:label="@string/title_activity_favorite_list" />
        <activity
            android:name=".activity.base.BaseListActivity"
            android:label="@string/title_activity_base_list"></activity>
    </application>

</manifest>
